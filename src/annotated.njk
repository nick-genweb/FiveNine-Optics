<script>
  // Make annotations draggable on click to avoid overlaps
  document.querySelectorAll('.annotation-label').forEach(label => {
    label.style.cursor = 'move';
    let isDragging = false;
    let startX, startY, initialLeft, initialTop;

    label.addEventListener('mousedown', (e) => {
      isDragging = true;
      startX = e.clientX;
      startY = e.clientY;
      const rect = label.getBoundingClientRect();
      initialLeft = rect.left;
      initialTop = rect.top;
      label.style.position = 'fixed';
      label.style.zIndex = 100001;
    });

    document.addEventListener('mousemove', (e) => {
      if (isDragging) {
        const deltaX = e.clientX - startX;
        const deltaY = e.clientY - startY;
        label.style.left = (initialLeft + deltaX) + 'px';
        label.style.top = (initialTop + deltaY) + 'px';
      }
    });

    document.addEventListener('mouseup', () => {
      isDragging = false;
    });
  });
</script>
